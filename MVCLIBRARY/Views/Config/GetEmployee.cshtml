@model MVCLIBRARY.Models.Entity.TBL_EMPLOYEE
@{
    ViewBag.Title = "GetEmployee";
    Layout = "~/Views/Shared/Layout.cshtml";
}


@using (Html.BeginForm("UpdateEmployee", "Config", FormMethod.Post))
{
    <div style=" margin-bottom:15px"></div>
    <div class="from-group">
        @Html.HiddenFor(m => m.ID)
        @*@Html.TextBoxFor(k => k.ID, new { @class = "form-control" })*@
    </div>
    <div class=" form-group">
        <label>Personel Adı</label>
        @Html.TextBoxFor(k => k.NAME, new { @class = "form-control" })
    </div>
    <div class=" form-group">
        <label>Personel Soyadı</label>
        @Html.TextBoxFor(k => k.SURNAME, new { @class = "form-control" })
    </div>
   
    <div class=" form-group">
        <label>Personel Mail</label>
        @Html.TextBoxFor(k => k.MAIL, new { @class = "form-control" })
    </div>
  
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}
