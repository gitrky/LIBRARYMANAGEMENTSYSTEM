@model MVCLIBRARY.Models.Entity.TBL_EMPLOYEE
@{
    ViewBag.Title = "EmployeeAdd";
    Layout = "~/Views/Shared/layout.cshtml";
}

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Ad</label>
        @Html.TextBoxFor(y => y.NAME, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.NAME, "", new { @style = "color:red" })
        @*<input type="text" class="form-control" name="Employee" />*@
    </div>

    <div style="margin-top:15px">
        <label>Soyad</label>
        @Html.TextBoxFor(y => y.SURNAME, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.SURNAME, "", new { @style = "color:red" })
    </div> 
    <div style="margin-top:15px">
        <label>Yetki</label>
        @Html.TextBoxFor(y => y.POWER, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.POWER, "", new { @style = "color:red" })
    </div>

    <div style="margin-top:15px">
        <label>Mail</label>
        @Html.TextBoxFor(y => y.MAIL, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.MAIL, "", new { @style = "color:red" })
    </div>

    <div style="margin-top:15px">
        <label>Telefon numarası</label>
        @Html.TextBoxFor(y => y.TELEPHONENUM, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.TELEPHONENUM, "", new { @style = "color:red" })
    </div>

    <div style="margin-top:15px">
        <label>Adresi</label>
        @Html.TextAreaFor(y => y.ADDRESS, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ADDRESS, "", new { @style = "color:red" })
    </div>

    <div style="margin-top:15px">
        <label>Çalıştıği Kütüphane</label>
        @Html.DropDownListFor(k => k.TBL_LIBRARY.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "Form-control" })
        @*@Html.ValidationMessageFor(x => x.LIBRARYID, "", new { @style = "color:red" })*@
        @*@Html.TextBoxFor(y => y.TBL_LIBRARY.NAME, new { @class = "form-control" })*@
    </div>


    <div style="margin-top:15px">
        <button class="btn btn-info" id="BTN1">Personel Ekle</button>
    </div>
</form>
