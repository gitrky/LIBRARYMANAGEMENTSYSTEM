@model MVCLIBRARY.Models.Entity.TBL_BOOK
@{
    ViewBag.Title = "KitapEkle";
    Layout = "~/Views/Shared/layout.cshtml";
}

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Kitap Adı</label>
        @Html.TextBoxFor(k => k.NAME, new { @class = "form-control" })
    </div>

    <div style="margin-top:15px">
        <label>Kitap Kategori</label>
        @Html.DropDownListFor(k => k.TBL_CATEGORY.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "Form-control" })

    </div>

    <div style="margin-top:15px">
        <label>Kitap Yazarı</label>
        @Html.DropDownListFor(k => k.TBL_AUTHOR.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    </div>

    <div style="margin-top:15px">
        <label>Basım Yılı</label>
        @Html.TextBoxFor(k => k.PRINTYEAR, new { @class = "form-control" })
    </div>

    <div style="margin-top:15px">
        <label>Yayın Evi</label>
        @*@Html.TextBoxFor(k => k.TBL_PUBLISHER.NAME, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.TBL_PUBLISHER.ID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    </div>

    <div style="margin-top:15px">
        <label>Sayfa Sayısı</label>
        @Html.TextBoxFor(k => k.PAGE, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitabın Dili</label>
        @Html.DropDownListFor(k => k.TBL_LANGUAGE.ID, (List<SelectListItem>)ViewBag.dgr4, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Bulunduğu Kütüphane</label>
        @Html.DropDownListFor(k => k.TBL_LIBRARY.ID, (List<SelectListItem>)ViewBag.dgr5, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap Açıklaması</label>
        @Html.TextAreaFor(k => k.DESCRIPTION, new { @class = "form-control" })
    </div>

    <div style="margin-top:15px">
        <button class="btn btn-info">Yeni Kitap Ekle</button>
    </div>
    @* durumu gzili şekilde ekliyor  typpe= gizli değer olcak diyor
      namein valuesu true olarak güncellenecek *@
    <input type="hidden" name="Status" value="True" />
</form>